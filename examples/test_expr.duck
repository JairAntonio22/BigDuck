
#| returns absolute value of a number |#
proc mod(k, n int) -> int {
    loop k >= n {
        k <- k - n;
    }

    return k + 1;
}

#| main function |#
proc main() 
    var f0, f1, tmp, sum int;
{
    f0 <- 0;
    f1 <- 1;
    sum <- 0;

    loop f0 < 4000000 {
        if mod(f0, 2) = 0 {
            sum <- sum + f0;
        }

        tmp <- f1;
        f1 <- f0 + f1;
        f0 <- tmp;
    }
}
