
proc main()
    var array [10]int;
    var i, j, tmp int;
    var is_sorted bool;
{
    print("=== Unsorted array ===");

    loop i <- 0; i < 10; i <- i + 1 {
	array[i] <- (i - 5) * (i - 5);
	print(array[i]);
    }

    loop i <- 0; i < 10 - 1; i <- i + 1 {
	is_sorted <- true;

	loop j <- i + 1; j < 10; j <- j + 1 {
	    if array[i] > array[j] {
		tmp <- array[i];
		array[i] <- array[j];
		array[j] <- tmp;
		is_sorted <- false;
	    }
	}

	if is_sorted {
	    break;
	}
    }
    
    print("=== Sorted array ===");

    loop i <- 0; i < 10; i <- i + 1 {
	print(array[i]);
    }
}
